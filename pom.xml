                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                            	  <pluginExecution>
                                    <pluginExecutionFilter>
	                            		<groupId>org.apache.maven.plugins</groupId>
								       <artifactId>maven-antlr-plugin</artifactId>
								       <versionRange>2.0-beta-1</versionRange>
                                        <goals>
